#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Edit menu stuff
<Edit>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Float layout
    FloatLayout:

        # Action bar layout
        Button:
            size_hint: 1, None
            height: "60dp"
            pos_hint: {"top": 1}
            disabled: True 
            background_normal: ''
            background_disabled_normal: ''
            background_color: "00dd00"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        
        # Action bar label
        Label:
            size_hint: 1 , None
            height: "30dp"
            pos_hint: {"center_x": 0.5, "center_y":0.95}
            halign: "left"
            markup: True 
            font_name: root.font
            font_size: "18sp"
            text: " </ Edit profile \\>"
            color: "000000"

        # Back button
        ImageButton:
            pos_hint: {"center_x": .125, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/back.png"
            on_press:
                root.get_data()
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'Profile'

        # Grid layout
        GridLayout:
            cols: 1
            row_force_default: True
            row_default_height: "35dp"
            size_hint: (0.7, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "000000"

            # Username input label
            Label:
                pos_hint: {"center_x": 0.25, "center_y": 0.57}
                size_hint: 0.8, 0.1
                halign: "left"
                font_name: root.font
                markup: True
                color: "00dd00" 
                text: "Username..." 
            
            # Username input
            TextInput:
                id: Username
                size_hint: (1, None)
                height: "35dp"
                multiline: False
                keyboard_suggestions: True
                foreground_color: "ffffff"
                hint_text: "Enter username"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .1
                    Line:
                        width: 1.05
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            10, 10, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1

            
            # New line - Empty label
            Label:
                text:""

            # First-name input label
            Label:
                pos_hint: {"center_x": 0.25, "center_y": 0.57}
                size_hint: 0.8, 0.1
                halign: "left"
                font_name: root.font
                markup: True
                color: "00dd00" 
                text: "Firstname..." 
            
            # First-name input
            TextInput:
                id: Firstname
                size_hint: (1, None)
                height: "35dp"
                multiline: False
                keyboard_suggestions: True
                foreground_color: "ffffff"
                hint_text: "Enter fisrtname"
                text: ""
                hint_text_color: "a8d2a255"
                font_name: root.font
                background_color: "#00000044"
                background_selected: 'ffffff'
                background_normal: ''
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .1
                    Line:
                        width: 1.05
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            10, 10, 10, 10, \
                            self.height \
                            )
                    Color:
                        rgba: 1, 1, 1, 1

            # New line - Empty label
            Label:
                text:""

        # # Logo
        # Image:
        #     source: 'Assets/skull.gif'
        #     pos_hint: {"center_x":0.5, "center_y": 0.3}
        #     size_hint: .3, .3
        #     allow_stretch: True
        #     anim_delay: 0.05
        #     mipmap: True
    
        # Save button
        Button:
            size_hint: 0.8, None
            height: "35dp"
            pos_hint: {'center_x':0.5, "center_y": .1}
            markup: True
            font_name: root.font
            text: "[b]Save Profile[/b]"
            color: "000000"
            background_normal: ''
            background_color: "00dd00"
            canvas.before:
                Color:
                    rgba: .10, .10, .10, .9
                Line:
                    width: 1.05
                    rectangle: self.x, self.y, self.width, self.height
            on_press:
                root.save_profile(Username, Firstname)
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'Profile'