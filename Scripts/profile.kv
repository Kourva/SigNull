#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Profile menu stuff
<Profile>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Float layout
    FloatLayout:

        # Action bar layout
        Button:
            size_hint: 1, None
            height: "100dp"
            pos_hint: {"top": 1}
            disabled: True 
            background_normal: ''
            background_disabled_normal: ''
            background_color: "00dd00"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        
        # Action bar label
        Label:
            size_hint: 1 , None
            height: "30dp"
            pos_hint: {"center_x": 0.5, "top":1}
            halign: "left"
            markup: True 
            font_name: root.font
            font_size: "18sp"
            text: " </ SigNull \\>"
            color: "000000"

        # Home button
        ImageButton:
            pos_hint: {"center_x": .125, "center_y": 0.9}
            size_hint: 0.1, 0.1
            source: "Assets/home_out.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'MainMenu'

        # Console button
        ImageButton:
            pos_hint: {"center_x": .385, "center_y": 0.9}
            size_hint: 0.1, 0.1
            source: "Assets/console_out.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'Console'

        # Notification button
        ImageButton:
            pos_hint: {"center_x": .625, "center_y": 0.9}
            size_hint: 0.1, 0.1
            source: "Assets/notification_out.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'Notification'
        
        # Profile button
        ImageButton:
            pos_hint: {"center_x": .875, "center_y": 0.9}
            size_hint: 0.1, 0.1
            source: "Assets/profile.png"

        # Profile picture
        ImageButton:
            pos_hint: {"center_x": 0.2, "center_y": 0.8}
            size_hint: 0.2, 0.2
            source: "Assets/profile_picture.png"

        # User info label
        Label:
            id: userinfo 
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            size_hint: 0.5, 0.1
            halign: "left"
            font_name: root.font
            markup: True 
            text: "Guest\n[size=24][font=RobotoMono-Regular]@[color=#aaaaaa]guest_user[/color][/font]"
            font_size: 27

        # Float layout for account data -> followers, followings, ...
        FloatLayout:
            pos_hint: {"center_x": 0.5, "center_y":0.6}
            size_hint: 0.7, None
            height: "70dp"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .1
                Line:
                    width: 1.05
                    rectangle: self.x, self.y, self.width, self.height

            # Followers label
            Label:
                pos_hint: {"center_x": 0.25, "center_y": 0.57}
                size_hint: 0.4, 0.1
                halign: "center"
                font_name: root.font
                markup: True
                color: "eeeeee" 
                text: "[color=00aa00]Followers[/color]\n\n[size=26]34[/size]"
                font_size: 16   

            # Followings label
            Label:
                pos_hint: {"center_x": 0.5, "center_y": 0.57}
                halign: "center"
                font_name: root.font
                markup: True
                color: "eeeeee" 
                text: "[color=00aa00]Followings[/color]\n\n[size=26]13[/size]"
                font_size: 16            

            # Services label
            Label:
                pos_hint: {"center_x": 0.75, "center_y": 0.57}
                size_hint: 0.4, 0.1
                halign: "center"
                font_name: root.font
                markup: True
                color: "eeeeee" 
                text: "[color=00aa00]Services[/color]\n\n[size=26]27[/size]"
                font_size: 16           

        # Edit button
        Button:
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            size_hint: 0.7, None
            height: "30dp"
            background_normal: ''
            background_color: "00dd00"
            font_name: root.font
            markup: True
            text: "[color=000000]Edit Profile[/color]"
            halign: "center"
            canvas.before:
                Color:
                    rgba: .10, .10, .10, .9
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            on_press:
                root.load_profile()
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'Edit'

        # Logo
        Image:
            source: 'Assets/matrix.gif'
            pos_hint: {"center_x":0.5, "center_y": 0.25}
            size_hint: .5, .5
            allow_stretch: True
            anim_delay: 0.05
            mipmap: True

        # Version
        Label:
            pos_hint: {"center_x": 0.5, "bottom": 1}
            size_hint: 0.7, None
            height: "40dp"
            halign: "center"
            font_name: root.font
            markup: True
            color: "00aa00" 
            text: "SigNull version x.X.x"
            font_size: 16             